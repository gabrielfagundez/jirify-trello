{
  "name": "Styles for Trello",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Give Trello a nice style.",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_title": "SFT",
    "popup": "popup.html"
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://trello.com/*"],
      "css" : ["app.css"],
      "js": ["jquery.js", "app.js"]
    }
  ],
  "permissions": [
    "https://trello.com/*"
  ]
}
